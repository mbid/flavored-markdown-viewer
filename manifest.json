{
  "description": "Preview github-flavored markdown in chrome.",
  "manifest_version": 2,
  "name": "Flavored Markdown Viewer",
  "version": "0.1",

  "permissions": [
    "file://*/*.md",
    "file://*/*.markdown",
    "https://api.github.com/*"
  ],
  "web_accessible_resources": [
    "github-markdown.css"
  ],

  "content_scripts": [
    {
      "matches": [
        "file://*/*.md",
        "file://*/*.markdown"
      ],
      "js": [
        "content.js",
        "showdown.min.js"],
      "css": [
        "github-markdown.css",
	"style.css"],
      "run_at": "document_start"
    }
  ]
}
