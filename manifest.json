{
  "description": "Preview github-flavored markdown in chrome.",
  "manifest_version": 2,
  "name": "Flavored Markdown Viewer",
  "version": "0.1",
  "icons": {
    "16": "icons/markdown16.png",
    "48": "icons/markdown48.png",
    "128": "icons/markdown128.png"
  },

  "permissions": [
    "file://*/*.md",
    "file://*/*.markdown",
    "https://api.github.com/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "file://*/*.md",
        "file://*/*.markdown"
      ],
      "js": [
        "content.js",
        "showdown.min.js"],
      "css": [
        "github-markdown.css",
	"style.css"],
      "run_at": "document_start"
    }
  ]
}
